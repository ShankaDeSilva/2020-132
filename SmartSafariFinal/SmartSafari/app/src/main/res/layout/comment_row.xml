<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lvbaseRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/justtLAyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/colorPrimary"
            app:civ_shadow_radius="10" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_more"
            android:layout_toRightOf="@+id/ivUser"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_comment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:layout_toRightOf="@+id/ivUser"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="Type"
            android:textColor="#848484"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_comment_type"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="Rate"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="7dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_more_vert" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/user_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:progressTint="@color/yellow"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Comment Description"
        android:textColor="#0c0c0c"
        android:textSize="15sp" />

    <View
        android:id="@+id/jstview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/justtLAyout"
        android:background="#d9d9d9" />
</LinearLayout>